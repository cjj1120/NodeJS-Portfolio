<!-- Image card -->
<!-- //Below line can adjust the GRID and center everything cool! -->
<section>
<div class="container d-flex align-items-center justify-content-center">
    <div class="card-group">
      <% for(var x = 0; x < projects.length; x++) { %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%- projects[x].logo %> " alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%- projects[x].title %></h5>
          <p class="card-text"><%- projects[x].description %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%- projects[x].way %></li>
            <li class="list-group-item"><%- projects[x].category %></li>
            <li class="list-group-item">
              <button type ="button" class="btn btn-outline-danger btn-sm">Delete</button>
              <button type ="button" class="btn btn-outline-info btn-sm">Edit</button>
          </ul>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      <% } %>
    </div>
</div>
<%- include('partials/footer') %>
</section>


<!-- Modal for BUTTON -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label>Image URL</label>
            <input type="email" class="form-control" >
          </div>
          <div class="form-group">
            <label>Title</label>
            <input type="email" class="form-control" >
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" cols="30" rows="10"></textarea>
          </div>
          <div class="form-group">
            <label>Way</label>
            <select multiple class="form-control" >
              <option>Time management</option>
              <option>Good habit</option>
              <option>Hiking</option>
              <option>Workout</option>
              <option>Journalizing/option>
              <option>Introspection </option>
            </select>
          </div>
          <div class="form-group">
            <label>Category</label>
            <select class="form-control" >
              <option>Lifestyle</option>
              <option>Health</option>
              <option>Psych</option>

            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


